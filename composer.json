{
    "name": "kcs/k8s-php",
    "description": "PHP client for Kubernetes",
    "type": "library",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [{
        "name": "Alessandro Chitolina",
        "email": "alekitto@gmail.com"
    }],
    "require": {
        "php": "^8.2",
        "doctrine/collections": "^1 || ^2",
        "halaxa/json-machine": "^1.1",
        "kcs/class-finder": "^0.5",
        "kcs/metadata": "^4.0",
        "php-http/discovery": "^1",
        "psr/cache": "^1 || ^2 || ^3",
        "psr/http-client": "^1",
        "psr/http-factory": "^1",
        "psr/http-message": "^1",
        "symfony/yaml": "^5.4 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "ext-zip": "*",
        "nette/php-generator": "^4.0",
        "nyholm/psr7": "^1",
        "phpspec/prophecy-phpunit": "^2.2",
        "phpunit/phpunit": "^9.4",
        "roave/security-advisories": "dev-latest",
        "solido/php-coding-standards": "dev-master",
        "symfony/console": "^5.4 || ^6.0 || ^7.0",
        "symfony/filesystem": "^5.4 || ^6.0 || ^7.0",
        "symfony/framework-bundle": "^5.4 || ^6.0 || ^7.0",
        "symfony/http-client": "^5.4 || ^6.0 || ^7.0",
        "symfony/process": "^5.4 || ^6.0 || ^7.0",
        "symfony/var-dumper": "^5.4 || ^6.0 || ^7.0",
        "zircote/swagger-php": "^4.0"
    },
    "scripts": {
        "phpstan": "phpstan analyse src/ -c vendor/solido/php-coding-standards/phpstan.neon --level=9 --no-progress -vvv --memory-limit=2048M",
        "cscheck": "vendor/bin/phpcs",
        "csfix": "vendor/bin/phpcbf"
    },
    "bin": [
        "bin/k8s-api"
    ],
    "autoload": {
        "psr-4": {
            "Kcs\\K8s\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Kcs\\K8s\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        },
        "sort-packages": true
    }
}
